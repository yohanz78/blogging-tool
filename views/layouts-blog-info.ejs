<!-- Webpage Title Section -->
<div class="my-14">
    <div class="flex flex-col space-y-8">
        <% if (locals.author) { %>
            <h1 class="flex justify-center text-5xl font-bold"><%= locals.author.blog_title %></h1>
            <h2 class="flex justify-center text-3xl font-extralight"><%= locals.author.blog_subtitle %></h2>
            <p class="flex justify-center text-xl">by <%= locals.author.name %></p>
        <% } else { %>
            <h1 class="flex justify-center text-5xl font-bold">Blog Ease</h1>
            <h2 class="flex justify-center text-3xl font-extralight">Simplifying Your Blogging Journey with Simple Tools</h2>
            <p class="flex justify-center text-xl">Anonymus</p>
        <% } %>
    </div>
</div>